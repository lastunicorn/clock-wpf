<UserControl
    x:Class="DustInTheWind.ClockWpf.ClearClock.Controls.SettingsPage"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:DustInTheWind.ClockWpf.ClearClock.Controls"
    
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400"
    d:DataContext="{d:DesignInstance controls:SettingsPageModel}">

    <Border
        Background="WhiteSmoke">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="6*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Background="LightGray"
                    BorderBrush="Gray"
                    BorderThickness="0 0 0 1">

                    <TextBlock
                        Text="Settings"
                        FontSize="20"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible"/>

                </Border>

                <Border
                    Padding="8"
                    Grid.Row="1"
                    Grid.Column="1">

                    <TabControl
                        BorderThickness="0"
                        Background="WhiteSmoke">

                        <TabItem
                            Header="Settings"
                            Background="WhiteSmoke">

                            <controls:SettingsControl
                                DataContext="{Binding SettingsViewModel}"/>

                        </TabItem>

                        <TabItem
                            Header="About"
                            Background="WhiteSmoke">

                            <controls:AboutControl
                                DataContext="{Binding AboutViewModel}"/>

                        </TabItem>

                    </TabControl>

                </Border>

                <Button
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Content="Close"
                    FontSize="20"
                    Background="LightGray"
                    Command="{Binding SettingsCloseCommand}" />

            </Grid>

    </Border>

</UserControl>
