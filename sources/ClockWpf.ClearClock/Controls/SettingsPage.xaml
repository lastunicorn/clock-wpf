<UserControl
    x:Class="DustInTheWind.ClockWpf.ClearClock.Controls.SettingsPage"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:DustInTheWind.ClockWpf.ClearClock.Controls"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance controls:SettingsPageModel}">

    <Border
        Background="Beige"
        Padding="10">

        <DockPanel>

            <StackPanel
                DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Right">

                <Button
                    Width="25"
                    Height="25"
                    Click="CloseSettingsButton_Click"
                    Background="Red">

                    <Path
                        Data="M 0,0 L 1,1 M 1,0 L 0,1"
                        Stroke="White"
                        StrokeThickness="3"
                        StrokeStartLineCap="Round"
                        StrokeEndLineCap="Round"
                        Stretch="Uniform"
                        Width="12"/>

                </Button>

            </StackPanel>

            <TabControl>

                <TabItem Header="Settings">

                    <controls:SettingsControl
                        DataContext="{Binding SettingsViewModel}"/>

                </TabItem>

                <TabItem Header="About">

                    <controls:AboutControl
                        DataContext="{Binding AboutViewModel}"/>

                </TabItem>

            </TabControl>

        </DockPanel>

    </Border>

</UserControl>
