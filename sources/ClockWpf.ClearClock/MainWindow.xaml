<Window
    x:Class="DustInTheWind.ClockWpf.ClearClock.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:clockWpf="clr-namespace:DustInTheWind.ClockWpf;assembly=DustInTheWind.ClockWpf"
    xmlns:controls="clr-namespace:DustInTheWind.ClockWpf.ClearClock.Controls"
    
    mc:Ignorable="d"
    Title="Clear Clock"
    SizeToContent="WidthAndHeight"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResize">

    <Grid>

        <clockWpf:AnalogClock
            x:Name="AnalogClock1"
            Width="400"
            Height="400"
            MouseRightButtonDown="AnalogClock_MouseRightButtonDown"/>

        <controls:CornerButton
            x:Name="SettingsButton"
            Width="{Binding ActualWidth, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            Height="{Binding ActualHeight, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Cursor="Hand"
            Visibility="Collapsed"
            Click="SettingsButton_Click"
            Corner="TopLeft">

            <Path
                Data="M 12,0 L 14,0 L 14.5,2.5 L 17,3.5 L 19,2 L 20.5,3.5 L 19,5.5 L 20.5,8 L 23,8.5 L 23,10.5 L 20.5,11 L 19,13.5 L 20.5,15.5 L 19,17 L 17,15.5 L 14.5,16.5 L 14,19 L 12,19 L 11.5,16.5 L 9,15.5 L 7,17 L 5.5,15.5 L 7,13.5 L 5.5,11 L 3,10.5 L 3,8.5 L 5.5,8 L 7,5.5 L 5.5,3.5 L 7,2 L 9,3.5 L 11.5,2.5 Z M 13,6 A 3.5,3.5 0 1 0 13,13 A 3.5,3.5 0 1 0 13,6 Z"
                Fill="White"
                Stretch="Uniform"
                Width="25"/>

        </controls:CornerButton>

        <controls:CornerButton
            x:Name="CloseButton"
            Width="{Binding ActualWidth, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            Height="{Binding ActualHeight, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            Visibility="Collapsed"
            Click="CloseButton_Click"
            Corner="TopRight"
            HoverBackground="Red">

            <Path
                Data="M 0,0 L 1,1 M 1,0 L 0,1"
                Stroke="White"
                StrokeThickness="3"
                StrokeStartLineCap="Round"
                StrokeEndLineCap="Round"
                Stretch="Uniform"
                Width="18"/>

        </controls:CornerButton>

        <Thumb
            x:Name="ResizeGrip"
            Width="{Binding ActualWidth, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            Height="{Binding ActualHeight, ElementName=AnalogClock1, Converter={StaticResource QuarterSizeConverter}}"
            Style="{StaticResource OverlayThumbStyle}"
            Visibility="Collapsed"
            DragDelta="ResizeGrip_DragDelta" />

        <Border
            x:Name="SettingsPage"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Beige"
            Visibility="Collapsed"
            Padding="10">

            <DockPanel>

                <StackPanel
                    DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

                    <Button
                        Width="25"
                        Height="25"
                        Click="CloseSettingsButton_Click"
                        Background="Red">

                        <Path
                            Data="M 0,0 L 1,1 M 1,0 L 0,1"
                            Stroke="White"
                            StrokeThickness="3"
                            StrokeStartLineCap="Round"
                            StrokeEndLineCap="Round"
                            Stretch="Uniform"
                            Width="12"/>

                    </Button>

                </StackPanel>

                <TabControl>

                    <TabItem Header="Settings">

                        <Border Padding="10">
                            <DockPanel>

                                <TextBlock
                                    DockPanel.Dock="Top"
                                    Text="Templates:"
                                    FontWeight="DemiBold" />

                                <ComboBox
                                    DockPanel.Dock="Top"
                                    x:Name="templateComboBox"
                                    SelectionChanged="TemplateComboBox_SelectionChanged"
                                    DisplayMemberPath="Name"
                                    Margin="0 5 0 0"/>

                                <Control/>

                            </DockPanel>
                        </Border>

                    </TabItem>

                    <TabItem Header="About">

                        <Border Padding="20">
                            <StackPanel>

                                <TextBlock
                                    Text="Clear Clock"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"
                                    Margin="0 0 0 10"/>

                                <TextBlock
                                    x:Name="VersionTextBlock"
                                    Text="Version 1.0.0"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Margin="0 0 0 20"/>

                                <TextBlock
                                    Text="An elegant analog clock application built with WPF"
                                    FontSize="12"
                                    TextWrapping="Wrap"
                                    HorizontalAlignment="Center"
                                    Margin="0 0 0 20"/>

                                <Separator Margin="0 10"/>

                                <TextBlock
                                    Text="Author"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Margin="0 10 0 5"/>

                                <TextBlock
                                    Text="Dust in the Wind"
                                    FontSize="12"
                                    Margin="0 0 0 10"/>

                                <TextBlock
                                    Text="Copyright"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Margin="0 10 0 5"/>

                                <TextBlock
                                    Text="Copyright © Dust in the Wind 2010-2025"
                                    FontSize="12"
                                    Margin="0 0 0 10"/>

                                <TextBlock
                                    Text="License"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Margin="0 10 0 5"/>

                                <TextBlock
                                    Text="GNU General Public License v3.0"
                                    FontSize="12"
                                    Margin="0 0 0 10"/>

                            </StackPanel>
                        </Border>

                    </TabItem>

                </TabControl>

            </DockPanel>

        </Border>
    </Grid>

</Window>
