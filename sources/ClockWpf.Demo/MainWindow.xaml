<Window
    x:Class="DustInTheWind.ClockWpf.Demo.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:clockWpf="clr-namespace:DustInTheWind.ClockWpf;assembly=DustInTheWind.ClockWpf"
    xmlns:shapes="clr-namespace:DustInTheWind.ClockWpf.Shapes;assembly=DustInTheWind.ClockWpf"
    xmlns:timeProviders="clr-namespace:DustInTheWind.ClockWpf.TimeProviders;assembly=DustInTheWind.ClockWpf"
    xmlns:local="clr-namespace:DustInTheWind.ClockWpf.Demo"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    
    mc:Ignorable="d"
    Title="Analog Clock Demo"
    Height="600"
    Width="1000">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Column="0"
            Margin="20">

            <clockWpf:AnalogClock
                x:Name="analogClock1"/>

            <clockWpf:PerformaceView
                DataContext="{Binding ElementName=analogClock1}"/>

        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#f0f0f0"
            ShowsPreview="True"/>

        <Grid
            Grid.Column="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel
                Grid.Row="0"
                Margin="10">

                <ComboBox
                    DockPanel.Dock="Top"
                    x:Name="templateComboBox"
                    SelectionChanged="TemplateComboBox_SelectionChanged"
                    DisplayMemberPath="Name"/>

                <DockPanel
                    Grid.Row="0"
                    Margin="0 10 0 0">

                    <TextBlock
                        DockPanel.Dock="Top"
                        Text="Shapes:"
                        FontWeight="Bold"
                        Margin="0 0 0 5"/>

                    <ListBox
                        ItemsSource="{Binding ElementName=analogClock1, Path=Shapes}"
                        SelectedItem="{Binding SelectedShape}"
                        DisplayMemberPath="">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                    <Run Text=" (" Foreground="Gray" />
                                    <Run Text="{Binding Mode=OneWay}" Foreground="Gray" />
                                    <Run Text=")" Foreground="Gray" />
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                </DockPanel>

            </DockPanel>

            <GridSplitter
                Grid.Row="1"
                Height="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#f0f0f0"
                ShowsPreview="True"/>

            <DockPanel
                Grid.Row="2"
                Margin="10">

                <TextBlock
                    DockPanel.Dock="Top"
                    Text="Properties:"
                    FontWeight="Bold"
                    Margin="0 0 0 5"/>

                <xctk:PropertyGrid
                    SelectedObject="{Binding SelectedShape}"
                    ShowSortOptions="True"
                    ShowSearchBox="True"
                    ShowSummary="True"
                    ShowAdvancedOptions="True"/>

            </DockPanel>

        </Grid>

    </Grid>

</Window>
