<UserControl
    x:Class="DustInTheWind.ClockWpf.TemplateEditor.Templates.TemplatesControl"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:templates="clr-namespace:DustInTheWind.ClockWpf.TemplateEditor.Templates"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance templates:TemplatesViewModel}">

    <Grid
        Grid.Column="2">

        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel
            Grid.Row="0"
            Margin="0 10 0 0">

            <DockPanel
                DockPanel.Dock="Top">

                <Button
                    DockPanel.Dock="Right"
                    Content="Load"
                    Padding="10 0"
                    Margin="5 0 0 0"
                    IsEnabled="False" />

                <Button
                    DockPanel.Dock="Right"
                    Content="Save"
                    Padding="10 0"
                    Margin="5 0 0 0"
                    Command="{Binding SaveTemplateCommand}" />

                <ComboBox
                    ItemsSource="{Binding TemplateTypes}"
                    SelectedItem="{Binding SelectedTemplateType}"
                    DisplayMemberPath="Name"/>    
            </DockPanel>

            <StackPanel
                DockPanel.Dock="Top"
                Margin="0 10 0 0"
                Orientation="Horizontal">

                <Button
                    DockPanel.Dock="Right"
                    Content="Add Shape"
                    Padding="10 0"
                    IsEnabled="False" />

            </StackPanel>
            
            <ListBox
                Grid.Row="0"
                Margin="0 10 0 0"
                ItemsSource="{Binding Shapes, Mode=OneWay}"
                SelectedItem="{Binding SelectedShape}"
                DisplayMemberPath="">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--<TextBlock>
                        <Run Text="{Binding Name, Mode=OneWay}" />
                        <Run Text=" (" Foreground="Gray" />
                        <Run Text="{Binding Mode=OneWay}" Foreground="Gray" />
                        <Run Text=")" Foreground="Gray" />
                        </TextBlock>-->
                        <Border Padding="0 1">
                            <StackPanel>
                            
                                <TextBlock
                                    Text="{Binding Name, Mode=OneWay}"
                                    FontWeight="DemiBold"/>

                                <TextBlock
                                    Text="{Binding Mode=OneWay}"
                                    FontSize="11"
                                    Foreground="Gray"
                                    Margin="10 0 0 0"/>
                            
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>

        </DockPanel>

        <GridSplitter
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Height="10">

            <GridSplitter.Template>
                <ControlTemplate TargetType="{x:Type GridSplitter}">
                    <Grid Background="Transparent">

                        <Ellipse
                            Width="55"
                            Height="2"
                            Fill="Gray"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        
                    </Grid>
                </ControlTemplate>
            </GridSplitter.Template>

        </GridSplitter>

        <xctk:PropertyGrid
            Grid.Row="2"
            SelectedObject="{Binding SelectedShape, Mode=OneWay}"
            ShowSortOptions="True"
            ShowSearchBox="True"
            ShowSummary="True"
            ShowAdvancedOptions="True"
            BorderThickness="0"/>

    </Grid>

</UserControl>
