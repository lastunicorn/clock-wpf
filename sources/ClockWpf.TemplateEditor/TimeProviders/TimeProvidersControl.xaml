<UserControl
    x:Class="DustInTheWind.ClockWpf.TemplateEditor.TimeProviders.TimeProvidersControl"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:timeProviders="clr-namespace:DustInTheWind.ClockWpf.TemplateEditor.TimeProviders"
    
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance timeProviders:TimeProvidersViewModel}">

    <Grid
        Grid.Column="2">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox
            Grid.Row="0"
            Margin="0 10 0 0"
                DockPanel.Dock="Top"
                ItemsSource="{Binding TimeProviderTypes}"
                SelectedItem="{Binding SelectedTimeProviderType}"
                DisplayMemberPath="Name"/>

        <xctk:PropertyGrid
            Grid.Row="1"
            SelectedObject="{Binding SelectedTimeProvider, Mode=OneWay}"
            ShowSortOptions="True"
            ShowSearchBox="True"
            ShowSummary="True"
            ShowAdvancedOptions="True"
            BorderThickness="0"
            Margin="0 8 0 0"/>
    </Grid>

</UserControl>
