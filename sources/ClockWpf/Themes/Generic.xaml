<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.ClockWpf"
    xmlns:shapes="clr-namespace:DustInTheWind.ClockWpf.Shapes">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <local:TimeSpanToMillisecondsConverter x:Key="TimeSpanToMillisecondsConverter" />

    <Style TargetType="{x:Type local:AnalogClock}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AnalogClock}">
                    <Viewbox>
                        <Border
                            Background="{TemplateBinding Background}">

                            <Grid>
                                <shapes:ShapeCanvas
                                    x:Name="PART_ShapeCanvas"
                                    Width="200"
                                    Height="200"
                                    Shapes="{TemplateBinding Shapes}"
                                    KeepProportions="{TemplateBinding KeepProportions}"/>

                                <Grid
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{TemplateBinding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Text="No shapes"
                                        FontSize="12"
                                        Foreground="Gray"
                                        HorizontalAlignment="Center"/>

                                    <TextBlock
                                        Grid.Row="1"
                                        Text="Add shapes to the clock or apply a template"
                                        FontSize="8"
                                        Foreground="Gray"
                                        HorizontalAlignment="Center"
                                        Margin="0 5 0 0"/>
                                </Grid>
                            </Grid>

                        </Border>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:PerformaceView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PerformaceView}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Average:"
                            FontWeight="Bold"
                            Margin="0 0 8 0"/>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding AverageTime, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TimeSpanToMillisecondsConverter}, StringFormat={}{0} ms}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Current:"
                            FontWeight="Bold"
                            Margin="0 0 8 0"/>

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding LastTime, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TimeSpanToMillisecondsConverter}, StringFormat={}{0} ms}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="Count:"
                            FontWeight="Bold"
                            Margin="0 0 8 0"/>

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding MeasurementCount, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}, StringFormat=n0}" />

                        <Button
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Content="Reset"
                            Command="{Binding ResetCommand, RelativeSource={RelativeSource TemplatedParent}}"
                            Margin="0 8 0 0"
                            Padding="8 4"
                            HorizontalAlignment="Left" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>